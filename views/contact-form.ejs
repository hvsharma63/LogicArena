<% include ./partials/header.ejs %>
<% include ./partials/navbar.ejs %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div id="comment-section">
                <h2 class="text-center">Contact US</h2>
                <form action="/post-contact-us" method="post" enctype='multipart/form-data'>
                    <div class="form-group col-4">
                        <label for="email">Email:</label>
                        <input type="email"
                            class="form-control" name="email" id="email" placeholder="Make sure it's verified by HV">
                    </div>
                    <div class="form-group col-12">
                        <label for="email">Message: </label>
                        <textarea class="form-control" name="message" id="message" rows="3"></textarea>
                    </div>
                    <div class="form-group col-3">
                        <div class="row">
                            <div class="col-md-6">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>    
    </div>
    <%if (typeof success == 'object') { %>
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="alert alert-success" role="alert">
                    <strong><%= success.Key %> Uploaded Successfully</strong>
                    <p>The Download Link is
                        <a href="#" class="alert-link"><%= success.Location %></a>
                    </p>
                </div>
            </div>
        </div>
    
    <% } %>
</div>
<% include ./partials/footer.ejs %>